<!-- res/layout/activity_seller_help.xml -->
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/help_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seller Help"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <!-- FAQs Section -->
        <TextView
            android:id="@+id/faqs_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frequently Asked Questions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Add your FAQs here -->
        <TextView
            android:id="@+id/faq1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q: How do I update my seller profile?\nA: Go to the Seller Settings page to update your profile."
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/faq2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q: How do I contact support?\nA: Use the Contact Us form below to reach out to our support team."
            android:layout_marginBottom="16dp"/>

        <!-- Email Us Section -->
        <TextView
            android:id="@+id/email_us_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Us"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/email_us_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Subject"
            android:inputType="text"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/email_us_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Message"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:lines="5"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/email_us_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Email"
            android:onClick="sendEmail"/>

        <!-- Feedback Section -->
        <TextView
            android:id="@+id/feedback_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feedback"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="24dp"/>

        <EditText
            android:id="@+id/feedback_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Feedback"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:lines="5"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/feedback_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Feedback"
            android:onClick="submitFeedback"/>

    </LinearLayout>

</ScrollView>
