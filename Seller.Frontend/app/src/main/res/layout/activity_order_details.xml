<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/title_orders_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Products Detail"
            android:textColor="@color/white"
            android:background="@color/my_primary"
            android:textSize="24sp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:padding="16dp"/>

        <TextView
            android:id="@+id/text_order_id_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order ID: 12345"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/text_customer_name_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer: John Doe"
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/text_order_date_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 2024-06-28"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:paddingBottom="16dp"/>

        <TextView
            android:id="@+id/text_delivery_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery Location: 123 Main St"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:paddingBottom="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_order_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/button_deliver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/my_primary"
            android:text="Deliver"
            android:layout_gravity="center"
            android:padding="16dp"/>

    </LinearLayout>

</ScrollView>
