<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:padding="16dp"
    android:elevation="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    tools:context=".FragmentAdd_Product">

    <LinearLayout
        android:id="@+id/motherLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:id="@+id/itemClicked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp">

            <ImageView
                android:id="@+id/orderProductImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                app:srcCompat="@drawable/logout_24dp" />

            <LinearLayout
                android:id="@+id/titleLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/orderProductImage"
                android:layout_toStartOf="@id/arrowImg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/orderHeadingProductQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="2"

                        android:textStyle="bold"
                        android:textColor="@color/my_primary"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text=" order received on product:"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/orderProductHeadingName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text=" Dancing gupangwda"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:textColor="@color/my_primary"
                    android:textSize="15sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/arrowImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/down" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/discLayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:id="@+id/orderProductNameText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Product Name: "
                    android:textColor="@color/my_primary"
                    android:textSize="14sp"
                    android:padding="4dp"
                    android:fontFamily="serif" />
                <TextView
                    android:id="@+id/orderIdText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Order Id: "
                    android:textColor="@color/my_primary"
                    android:textSize="14sp"
                    android:padding="4dp"
                    android:textAlignment="center"
                    android:fontFamily="serif" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="1dp">


                <TextView
                    android:id="@+id/orderProductNameValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="16sp"
                    android:padding="4dp"
                    android:fontFamily="serif" />

                <TextView
                    android:id="@+id/orderIdValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=" "
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:padding="4dp"
                    android:textAlignment="center"
                    android:fontFamily="serif" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:id="@+id/orderPersonNameText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Order By: "
                    android:textColor="@color/my_primary"
                    android:textSize="14sp"
                    android:padding="4dp"
                    android:fontFamily="serif" />
                <TextView
                    android:id="@+id/orderAddressText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Address: "
                    android:textColor="@color/my_primary"
                    android:textSize="14sp"
                    android:padding="4dp"
                    android:textAlignment="center"
                    android:fontFamily="serif" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="1dp">


                <TextView
                    android:id="@+id/orderPersonNameValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="16sp"
                    android:padding="4dp"
                    android:fontFamily="serif" />

                <TextView
                    android:id="@+id/orderAddressValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=" "
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:padding="4dp"
                    android:textAlignment="center"
                    android:fontFamily="serif" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">
                <TextView
                    android:id="@+id/orderProductPhoneText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Phone Number:"
                    android:textColor="@color/my_primary"
                    android:textSize="14sp"
                    android:padding="4dp"
                    android:fontFamily="serif" />


                <TextView
                    android:id="@+id/orderProductQuantityText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Quantity: "
                    android:textColor="@color/my_primary"
                    android:textSize="14sp"
                    android:padding="4dp"
                    android:textAlignment="center"
                    android:fontFamily="serif" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">
                <TextView
                    android:id="@+id/orderProductPhoneValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:padding="4dp"
                    android:fontFamily="serif" />


                <TextView
                    android:id="@+id/orderProductQuantityValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:padding="4dp"
                    android:textAlignment="center"
                    android:fontFamily="serif" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">
                <TextView
                    android:id="@+id/orderProductAmountText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Amount: "
                    android:textColor="@color/my_primary"
                    android:textSize="14sp"
                    android:padding="4dp"
                    android:fontFamily="serif" />


                <TextView
                    android:id="@+id/orderProductPaymentMethodText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Payment Method: "
                    android:textColor="@color/my_primary"
                    android:textSize="14sp"
                    android:padding="4dp"
                    android:textAlignment="center"
                    android:fontFamily="serif" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">
                <TextView
                    android:id="@+id/orderProductAmountValue"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:padding="4dp"
                    android:fontFamily="serif" />


                <TextView
                    android:id="@+id/orderProductPaymentMethodValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:padding="4dp"
                    android:textAlignment="center"
                    android:fontFamily="serif" />

            </LinearLayout>

            <Button
                android:id="@+id/acceptButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deliver"
               android:layout_marginHorizontal="40dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:padding="1dp"
                android:backgroundTint="@color/my_primary"
                android:textColor="@android:color/white"
                android:elevation="4dp"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
