<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        tools:replace="android:theme"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/kinmels"
        android:label="@string/app_name"
        android:roundIcon="@drawable/sellerapp"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/Theme.KinMelSellerApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".SellerLogin"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HelpActivity" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".NavigationBar" />
        <activity android:name=".OtpVerification" />
        <activity android:name=".UpdateProfileActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            />
        <activity android:name=".UpdatePasswordActivity" />
    </application>

</manifest>