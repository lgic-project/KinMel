<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="FirstPageActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/firstkinmel">
    </FrameLayout>

    <TextView
        android:id="@+id/slogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="24dp"
        android:text="Bringing Nepal's Charm to Your Palm: Shop, Smile, and Save with Us!"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:textStyle="italic"
        android:gravity="center"
        android:padding="16dp"
        android:lineSpacingExtra="8dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3"
        android:fontFamily="sans-serif-medium"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/my_secondary"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:weightSum="2">

        <Button
            android:id="@+id/signInButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:text="Sign-In"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:padding="12dp"
            android:elevation="4dp"
            android:background="@drawable/button_background_signin"/>

        <View
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/guestButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:text="Guest"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:padding="12dp"
            android:elevation="4dp"
            android:background="@drawable/button_background_guest"/>
    </LinearLayout>

</LinearLayout>
