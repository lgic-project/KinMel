<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".BuyerAddtoCart">

    <!-- Include my_cart_template -->
    <include
        android:id="@+id/cartTemplate"
        layout="@layout/my_cart_template"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Linear Layout below the included template -->
    <LinearLayout
        android:id="@+id/productContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_below="@id/cartTemplate"
        android:background="@color/background">


    <!-- Product Item Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Radio Button for Selection -->
        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Product Image -->
        <ImageView
            android:id="@+id/productImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/images"
            android:background="@color/white"/>

        <!-- Product Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="10dp">

            <!-- Product Name -->
            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <!-- Product Price -->
            <TextView
                android:id="@+id/productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/product_price"
                android:text="Price: $10"
                android:textSize="14sp"/>

            <!-- Product Discount Price -->
            <TextView
                android:id="@+id/productDiscountPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discount: $8"
                android:textSize="14sp"
                android:textColor="@color/discountprice"/>

<!--            Product Description-->
            <TextView
                android:id="@+id/productDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description of the product in small text lol"
                android:textSize="12sp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <!-- Plus and Minus Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/minusButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_minus"/>

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="18sp"/>

            <ImageButton
                android:id="@+id/plusButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_plus"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
    <include
        android:id="@+id/bottomLayout"
        layout="@layout/my_cart_bottom_template"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>

