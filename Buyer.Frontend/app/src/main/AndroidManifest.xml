<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/kinmelmain"
        android:supportsRtl="true"
        tools:replace="android:theme"
        android:theme="@style/Theme.KinMel"
        android:usesCleartextTraffic="true">
        <!-- tools:targetApi="31"> -->
        <!-- android:name=".NavigationBar" -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ViewAllActivity" />

        <activity android:name=".BuyerLogin" />
        <activity android:name=".BuyerAddtoCart" />
        <activity
            android:name=".UpdatePasswordActivity"
            android:theme="@style/UpdatePasswordTheme"/>
        <activity android:name=".BuyerSignUp" /> <!-- <activity android:name=".BuyerLogin" /> -->
        <activity android:name=".OTPPage" />
        <activity android:name=".NavigationBar" />
        <activity android:name=".SearchResultsActivity" />
        <activity android:name=".HelpActivity" />
        <activity android:name=".ThankYouActivity"/>
        <activity
            android:name=".UserProfileActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"/>
        <activity
            android:name=".ProductPage"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"/>
        <activity android:name=".BuyerAddressActivity" />
    </application>

</manifest>